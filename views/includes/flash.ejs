<!-- @format -->

<% if (locals.success && locals.success.length) { %>
<div
  class="alert alert-success alert-dismissible fade show text-center"
  role="alert"
>
  <%= locals.success[0] %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if (locals.error && locals.error.length) { %>
<div
  class="alert alert-warning alert-dismissible fade show text-center"
  role="alert"
>
  <%= locals.error[0] %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
